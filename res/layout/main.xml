<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:weightSum="2" android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false" android:id="@+id/linearLayout" android:layout_alignParentTop="false"
            android:layout_centerVertical="true">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openScanner"
                android:id="@+id/openScannerBtn"
                android:layout_weight="1"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/viewPhotos"
                android:id="@+id/viewPhotosBtn"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>