<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/usernameTextEdit"
                android:hint="@string/userNameHint" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordTextEdit" android:layout_below="@+id/usernameTextEdit" android:layout_alignStart="@+id/usernameTextEdit"
                android:layout_alignEnd="@+id/usernameTextEdit" android:hint="@string/passwordHint"/>
        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:id="@+id/loginBtn"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/passwordTextEdit" android:layout_alignEnd="@+id/passwordTextEdit"/>
        <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:id="@+id/signupBtn"
                android:layout_below="@+id/loginBtn" android:layout_alignStart="@+id/loginBtn"
                />
    </RelativeLayout>
</RelativeLayout>